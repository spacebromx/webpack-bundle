{
  "name": "webpack-bundle",
  "version": "1.0.0",
  "description": "A starter project ready to work with Webpack",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "precommit": "npm run --silent validate",
    "start": "webpack-dev-server --mode development --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "validate": "concurrently --names \"format,lint,test\" --prefix \"[{name}]\" --prefix-colors \"bgGreen.reset.bold,bgBlue.reset.bold,bgRed.reset.bold\" \"npm run format --silent\" \"npm run lint --silent\" \"npm run test --silent\""
  },
  "keywords": [],
  "author": "Alan Medina",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.8",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.0",
    "doctoc": "^1.4.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "imagemin": "^6.1.0",
    "img-loader": "^3.0.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run validate --silent"
    }
  },
  "lint-staged": {
    "linters": {
      "+(README|INSTRUCTIONS).md": [
        "doctoc",
        "npm run format",
        "git add"
      ],
      "**/!(README).+(md|css|json)": [
        "npm run format",
        "git add"
      ],
      "**/+(src|test|scripts)/**/*.js": [
        "npm run format",
        "npm run lint",
        "git add"
      ]
    }
  }
}
